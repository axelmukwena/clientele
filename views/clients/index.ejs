<div class='client-list'>
  <div class='row'>

    <!-- Add New Client Button--> 
    <div onclick="showAddClientForm('<%= JSON.stringify(contacts) %>')" class="card shadow-sm new">
      <strong class='new-text'>
        <i class="bi bi-plus-square-fill" style="font-size: 2rem;"></i>
      </strong>
    </div>

    <% if (clients.length === 0) { %>
      <h2 style='width: auto; padding-top: 30px;'>No client(s) found.</h2>
    <% } %>

    <!-- List of Clients -->
    <% for (client of clients) { %>
      <div id='<%=client._id%>' onclick="showClientsContacts('<%=client._id%>', '<%= client.name %>', '<%= JSON.stringify(client.contacts) %>')" class="card shadow-sm">
        <strong><%= client.name %></strong>
        <hr/>
        <small>Code: <%= client.code %></small>
        <small>Contacts: <%= client.contacts.length %></small>
      </div>
    <% } %>
  </div>
</div>
  
<!-- Display contacts on Client card click -->
<div class='card client-contacts shadow-sm'>
  <div class="card-header">
    <small class='client-contacts-title'>First National Bank has 0 Contacts</small>
    <button onclick='closeClientSideBar()' type="button" class="btn close-btn" aria-label="Close">&#x2715;</button>
  </div>
  <%- include('contacts'); %>
</div>

<!-- Display new client form -->
<div class='card client-add shadow-sm'>
  <div class="card-header">
    <small>New Client</small>
    <button onclick='closeClientSideBar()' type="button" class="btn close-btn" aria-label="Close">&#x2715;</button>
  </div>
  <%- include('new'); %>
</div>
